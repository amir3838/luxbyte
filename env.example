# ===========================================
# LUXBYTE Environment Variables
# ===========================================

# Supabase (Client) - Public Keys
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase (Server) - Private Keys
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
POSTGRES_URL=your_postgres_url_here
POSTGRES_URL_NON_POOLING=your_postgres_url_non_pooling_here

# Firebase (Client Web) - Public Keys
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key_here

# Firebase (Server) - Private Keys
FIREBASE_ADMIN_CREDENTIALS={"type":"service_account","project_id":"your_project_id","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# Application Configuration
NODE_ENV=development
PORT=3000

# Vercel Configuration
VERCEL_URL=your_vercel_url_here

# Alhareth Integration (Optional)
ALHARETH_API_KEY=your_alhareth_api_key_here
ALHARETH_API_URL=https://api.alhareth.com

# Security Configuration
ADMIN_KEY=your_strong_admin_key_here
HMAC_SECRET=your_hmac_secret_key_here
ALLOWED_ORIGINS=https://your-domain.vercel.app,https://luxbyte.eg

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=10